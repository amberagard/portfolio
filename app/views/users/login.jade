extends ../shared/template

block content
  h1 Login

  .container(style='margin-top:30px')
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        h3.panel-title
          strong Sign in
      .panel-body
        form(role='form', method='post', action='/login')
          .form-group
            label(for='exampleInputEmail1') Email
            input#exampleInputEmail1.form-control(type='email', style='border-radius:0px', placeholder='Enter email', name='email', autofocus='true')
          .form-group
            label(for='exampleInputPassword1')
              | Password
            input#exampleInputPassword1.form-control(type='password', style='border-radius:0px', placeholder='Password', name='password')
          button.btn.btn-sm.btn-default(type='submit') Sign in
